---
/**
 * HubHero - Centered hero section for the hub page
 * Matches Figma: "Comfy Hub" in yellow italic + muted subtitle
 */
import { getLocaleFromPath } from '../../i18n/utils';
import { t } from '../../i18n/ui';

const locale = getLocaleFromPath(Astro.url.pathname);
---

<section class="flex flex-col items-center gap-4 text-center pt-16">
  <h1 class="text-brand text-2xl font-black italic">
    {t('hub.title', locale)}
  </h1>
  <p class="text-hub-muted text-2xl font-normal">
    {t('hub.subtitle', locale)}
  </p>
</section>
