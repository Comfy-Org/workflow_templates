  }

  .use-cases-list {
    margin: 0;
    padding-left: 1.5rem;
  }

  .use-cases-list li {
    margin-bottom: 0.5rem;
    color: #4b5563;
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.375rem 0.75rem;
    background: #f3f4f6;
    color: #374151;
    border-radius: 6px;
    font-size: 0.875rem;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .faq-item h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #111827;
    margin: 0 0 0.5rem;
  }

  .faq-item p {
    color: #4b5563;
    margin: 0;
    line-height: 1.6;
  }

  .cta-footer {
    text-align: center;
    padding: 2rem;
    background: #f9fafb;
    border-radius: 12px;
    margin-top: 3rem;
  }

  .cta-footer h2 {
    margin-bottom: 0.5rem;
  }

  .cta-footer p {
    color: #6b7280;
    margin: 0 0 1.5rem;
  }

  @media (max-width: 640px) {
    .template-header h1 {
      font-size: 1.75rem;
    }

    section h2 {
      font-size: 1.25rem;
    }
  }
</style>
