---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import TryOnCloudButton from '../../components/TryOnCloudButton.astro';

export async function getStaticPaths() {
  const templates = await getCollection('templates');
  return templates.map((template) => ({
    params: { slug: template.data.name },
    props: { template },
  }));
}

const { template } = Astro.props;
const { data } = template;

const title = `${data.title || data.name} - ComfyUI Workflow Template`;
const canonicalUrl = `https://templates.comfy.org/templates/${data.name}/`;

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: data.title || data.name,
  description: data.description,
  applicationCategory: 'AI Workflow',
  operatingSystem: 'Cross-platform',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD',
  },
  aggregateRating: data.usage ? {
    '@type': 'AggregateRating',
    ratingValue: '4.5',
    ratingCount: Math.floor(data.usage / 10),
  } : undefined,
};

const faqStructuredData = data.faqItems?.length ? {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: data.faqItems.map((item) => ({
    '@type': 'Question',
    name: item.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: item.answer,
    },
  })),
} : null;

const mediaTypeLabels: Record<string, string> = {
  image: 'Image Generation',
  video: 'Video Generation',
  audio: 'Audio Generation',
  '3d': '3D Generation',
};
---

<BaseLayout
  title={title}
  description={data.metaDescription}
  canonicalUrl={canonicalUrl}
  ogType="article"
  structuredData={structuredData}
>
  <article class="template-detail">
    <header class="template-header">
      <div class="breadcrumb">
        <a href="/templates/">Templates</a>
        <span class="separator">/</span>
        <span>{data.title || data.name}</span>
      </div>
      
      <h1>{data.title || data.name}</h1>
      
      <div class="template-meta">
        <span class="media-type">{mediaTypeLabels[data.mediaType]}</span>
        {data.usage !== undefined && (
          <span class="usage">{data.usage.toLocaleString()} uses</span>
        )}
        {data.openSource === false && (
          <span class="api-badge">Uses Cloud API</span>
        )}
      </div>

      <div class="cta-section">
        <TryOnCloudButton templateName={data.name} size="large" />
      </div>
    </header>

    <section class="description-section">
      <h2>About This Workflow</h2>
      <p>{data.extendedDescription}</p>
    </section>

    {data.models && data.models.length > 0 && (
      <section class="models-section">
        <h2>Models Used</h2>
        <div class="model-list">
          {data.models.map((model) => (
            <span class="model-badge">{model}</span>
          ))}
        </div>
      </section>
    )}

    <section class="how-to-section">
      <h2>How to Use This Template</h2>
      <ol class="steps-list">
        {data.howToUse.map((step) => (
          <li>{step}</li>
        ))}
      </ol>
    </section>

    {data.suggestedUseCases && data.suggestedUseCases.length > 0 && (
      <section class="use-cases-section">
        <h2>Suggested Use Cases</h2>
        <ul class="use-cases-list">
          {data.suggestedUseCases.map((useCase) => (
            <li>{useCase}</li>
          ))}
        </ul>
      </section>
    )}

    {data.tags && data.tags.length > 0 && (
      <section class="tags-section">
        <h2>Tags</h2>
        <div class="tag-list">
          {data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </section>
    )}

    {data.faqItems && data.faqItems.length > 0 && (
      <section class="faq-section">
        <h2>Frequently Asked Questions</h2>
        <div class="faq-list">
          {data.faqItems.map((item) => (
            <div class="faq-item">
              <h3>{item.question}</h3>
              <p>{item.answer}</p>
            </div>
          ))}
        </div>
      </section>
    )}

    <section class="cta-footer">
      <h2>Ready to Get Started?</h2>
      <p>Try this workflow instantly on Comfy Cloud - no setup required.</p>
      <TryOnCloudButton templateName={data.name} size="large" />
    </section>
  </article>
</BaseLayout>

{faqStructuredData && (
  <script type="application/ld+json" set:html={JSON.stringify(faqStructuredData)} />
)}

<style>
