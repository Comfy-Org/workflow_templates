---
/**
 * HubNavbar - Top navigation bar for the hub page
 * Matches Figma: logo left, rounded search center, submit+avatar right
 */
import { getLocaleFromPath, localizeUrl } from '../../i18n/utils';
import { t } from '../../i18n/ui';

const locale = getLocaleFromPath(Astro.url.pathname);
---

<nav class="w-full bg-[#171718] sticky top-0 z-50">
  <div class="max-w-[1600px] mx-auto h-20 px-16 flex items-center gap-16">
    <!-- Left: Logo -->
    <a href={localizeUrl('/', locale)} class="shrink-0">
      <img
        src="/brand/comfy-hub-logo.svg"
        alt="Comfy"
        class="h-8 w-auto"
      />
    </a>

    <!-- Center: Search (cosmetic) -->
    <div
      class="flex-1 flex items-center gap-2 h-10 min-h-8 px-4 py-2 rounded-full bg-hub-surface text-hub-muted text-sm font-normal"
    >
      <svg class="size-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <span>{t('hub.search', locale)}</span>
    </div>

    <!-- Right: Actions -->
    <div class="flex items-center gap-4 shrink-0">
      <!-- Submit Creation button -->
      <a
        href="https://www.comfy.org"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center gap-1 h-10 px-4 py-2 rounded-full bg-hub-surface text-white text-xs font-bold hover:brightness-125 transition-all"
      >
        <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v14m7-7H5" />
        </svg>
        {t('hub.submitCreation', locale)}
      </a>

      <!-- User avatar placeholder -->
      <div class="flex items-center gap-1">
        <div class="size-10 rounded-full bg-white/10 flex items-center justify-center overflow-hidden">
          <svg class="size-5 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <svg class="size-4 text-white/40" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </div>
    </div>
  </div>
</nav>
