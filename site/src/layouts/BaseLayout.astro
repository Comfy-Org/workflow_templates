---
import SEOHead from '../components/SEOHead.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  structuredData?: object;
}

const { title, description, canonicalUrl, ogImage, ogType, structuredData } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <SEOHead
      title={title}
      description={description}
      canonicalUrl={canonicalUrl}
      ogImage={ogImage}
      ogType={ogType}
      structuredData={structuredData}
    />
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-900 antialiased">
    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur border-b border-gray-200">
      <nav class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 font-bold text-xl text-gray-900 hover:text-indigo-600 transition-colors">
          <svg class="w-8 h-8 text-indigo-600" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
          </svg>
          <span>ComfyUI Templates</span>
        </a>
        <div class="flex items-center gap-6">
          <a href="/templates/" class="text-gray-600 hover:text-gray-900 font-medium transition-colors">
            Browse Templates
          </a>
          <a 
            href="https://www.comfy.org/" 
            target="_blank" 
            rel="noopener"
            class="hidden sm:inline-flex items-center gap-1 px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-lg hover:bg-gray-800 transition-colors"
          >
            Visit Comfy.org
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>
      </nav>
    </header>
    
    <main class="flex-1">
      <slot />
    </main>
    
    <footer class="bg-gray-50 border-t border-gray-200">
      <div class="max-w-6xl mx-auto px-4 py-8">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
          <p class="text-gray-500 text-sm">&copy; 2026 Comfy Org. Open source workflows for everyone.</p>
          <div class="flex items-center gap-6">
            <a href="https://www.comfy.org" target="_blank" rel="noopener" class="text-gray-500 hover:text-gray-700 text-sm transition-colors">
              Comfy.org
            </a>
            <a href="https://docs.comfy.org" target="_blank" rel="noopener" class="text-gray-500 hover:text-gray-700 text-sm transition-colors">
              Docs
            </a>
            <a href="https://github.com/comfyanonymous/ComfyUI" target="_blank" rel="noopener" class="text-gray-500 hover:text-gray-700 text-sm transition-colors">
              GitHub
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
