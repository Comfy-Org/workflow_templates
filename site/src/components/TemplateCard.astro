---
interface Props {
  name: string;
  title: string;
  description: string;
  mediaType: 'image' | 'video' | 'audio' | '3d';
  tags?: string[];
  models?: string[];
  usage?: number;
  thumbnails?: string[];
}

const { name, title, description, mediaType, tags = [], usage, thumbnails = [] } = Astro.props;

const primaryThumbnail = thumbnails[0] || null;

const mediaTypeLabels: Record<string, string> = {
  image: 'Image',
  video: 'Video',
  audio: 'Audio',
  '3d': '3D',
};

const formatUsage = (count: number): string => {
  if (count >= 1000) {
    return `${(count / 1000).toFixed(1)}k`;
  }
  return count.toString();
};
---

<a href={`/templates/${name}/`} class="template-card">
  {primaryThumbnail ? (
    <div class="card-image">
      <img 
        src={`/thumbnails/${primaryThumbnail}`} 
        alt={`${title} example`}
        loading="lazy"
      />
      <span class="media-badge">{mediaTypeLabels[mediaType]}</span>
    </div>
  ) : (
    <div class="card-image placeholder">
      <span class="media-badge">{mediaTypeLabels[mediaType]}</span>
    </div>
  )}
  
  <div class="card-body">
    <h3 class="card-title">{title}</h3>
    <p class="card-description">{description}</p>
    
    <div class="card-meta">
      {usage !== undefined && (
        <span class="usage">{formatUsage(usage)} runs</span>
      )}
      {tags.length > 0 && (
        <span class="tag">{tags[0]}</span>
      )}
    </div>
  </div>
</a>

<style>
  .template-card {
    display: flex;
    flex-direction: column;
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    overflow: hidden;
    transition: box-shadow 0.2s, transform 0.2s;
  }

  .template-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px);
  }

  .card-image {
    position: relative;
    aspect-ratio: 16 / 10;
    background: #f3f4f6;
    overflow: hidden;
  }

  .card-image.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #e0e7ff 0%, #f0e7ff 100%);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .template-card:hover .card-image img {
    transform: scale(1.05);
  }

  .media-badge {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    padding: 0.25rem 0.625rem;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 4px;
    backdrop-filter: blur(4px);
  }

  .card-body {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    flex-grow: 1;
  }

  .card-title {
    margin: 0 0 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: #111827;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-description {
    margin: 0;
    font-size: 0.875rem;
    color: #6b7280;
    line-height: 1.5;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.75rem;
    padding-top: 0.75rem;
    border-top: 1px solid #f3f4f6;
  }

  .usage {
    font-size: 0.75rem;
    color: #6b7280;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.125rem 0.5rem;
    background: #f3f4f6;
    color: #374151;
    border-radius: 4px;
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .template-card {
      background: #1f2937;
      border-color: #374151;
    }

    .card-image {
      background: #374151;
    }

    .card-image.placeholder {
      background: linear-gradient(135deg, #312e81 0%, #4c1d95 100%);
    }

    .card-title {
      color: #f9fafb;
    }

    .card-description {
      color: #9ca3af;
    }

    .card-meta {
      border-color: #374151;
    }

    .tag {
      background: #374151;
      color: #d1d5db;
    }
  }
</style>
