---
import SEOHead from '../components/SEOHead.astro';

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  structuredData?: object;
}

const { title, description, canonicalUrl, ogImage, ogType, structuredData } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEOHead
      title={title}
      description={description}
      canonicalUrl={canonicalUrl}
      ogImage={ogImage}
      ogType={ogType}
      structuredData={structuredData}
    />
  </head>
  <body>
    <header class="site-header">
      <nav class="nav-container">
        <a href="/" class="logo">
          <span class="logo-text">ComfyUI Templates</span>
        </a>
        <div class="nav-links">
          <a href="/templates/">All Templates</a>
        </div>
      </nav>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer class="site-footer">
      <div class="footer-container">
        <p>&copy; 2026 Comfy Org. All rights reserved.</p>
        <div class="footer-links">
          <a href="https://comfy.org" target="_blank" rel="noopener">Comfy.org</a>
          <a href="https://cloud.comfy.org" target="_blank" rel="noopener">Comfy Cloud</a>
          <a href="https://docs.comfy.org" target="_blank" rel="noopener">Documentation</a>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: #1f2937;
  }

  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  a {
    color: #6366f1;
  }

  a:hover {
    color: #4f46e5;
  }
</style>

<style>
  .site-header {
    background: #fff;
    border-bottom: 1px solid #e5e7eb;
    padding: 1rem;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    text-decoration: none;
    color: inherit;
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 700;
    color: #111827;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    text-decoration: none;
    color: #4b5563;
    font-weight: 500;
  }

  .nav-links a:hover {
    color: #6366f1;
  }

  .site-footer {
    background: #f9fafb;
    border-top: 1px solid #e5e7eb;
    padding: 2rem 1rem;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-container p {
    margin: 0;
    color: #6b7280;
    font-size: 0.875rem;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    text-decoration: none;
    color: #6b7280;
    font-size: 0.875rem;
  }

  .footer-links a:hover {
    color: #6366f1;
  }
</style>
