    margin: 0 auto;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 1rem;
  }

  .breadcrumb a {
    color: #6366f1;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .separator {
    color: #d1d5db;
  }

  .template-header {
    margin-bottom: 2rem;
  }

  .template-header h1 {
    font-size: 2.25rem;
    font-weight: 700;
    color: #111827;
    margin: 0 0 1rem;
  }

  .template-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .media-type {
    padding: 0.375rem 0.75rem;
    background: #dbeafe;
    color: #1d4ed8;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .usage {
    padding: 0.375rem 0.75rem;
    background: #f3f4f6;
    color: #374151;
    border-radius: 6px;
    font-size: 0.875rem;
  }

  .api-badge {
    padding: 0.375rem 0.75rem;
    background: #fef3c7;
    color: #92400e;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .cta-section {
    margin-top: 1.5rem;
  }

  section {
    margin-bottom: 2.5rem;
  }

  section h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #111827;
    margin: 0 0 1rem;
  }

  .description-section p {
    color: #4b5563;
    line-height: 1.75;
    margin: 0;
  }

  .model-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .model-badge {
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
